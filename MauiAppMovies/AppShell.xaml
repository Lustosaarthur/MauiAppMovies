<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppMovies.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppMovies.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarForegroundColor="Red"
    Shell.TabBarTitleColor="Red"
    Shell.TitleColor="White"
    Shell.TabBarBackgroundColor="Black"
    Title="MauiAppMovies">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:StratPage}" Route="homepage" Icon="homewhite.png"/>
        <ShellContent Title="Favorities" ContentTemplate="{DataTemplate local:FavoritiesPage}" Route="favorities" Icon="heart.png"/>
    </TabBar>
</Shell>
